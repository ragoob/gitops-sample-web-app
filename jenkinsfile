pipeline {
  agent any
  environment {
    WORKSPACE = pwd()
  }

  stages {
      stage('unit-test') {
      agent { docker 
      { 
        image 'golang'  
        args '-u root' 
      } 
      }
      steps {
          echo 'Unit test excuting'
           sh 'make unit-tests'
      }
      }
  }
}
