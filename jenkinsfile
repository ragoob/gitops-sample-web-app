pipeline{
  agent any
  environment {
    WORKSPACE= pwd()
     GO114MODULE = 'on'
     CGO_ENABLED = 0 
     GOPATH = "${JENKINS_HOME}/jobs/${JOB_NAME}/builds/${BUILD_ID}"
  }

  stages {
      stage("unit-test") {
            agent { docker { image 'golang' } }
            steps {
                echo 'Unit test excuting'
                sh 'make unit-tests'
            }
        }
  }
}