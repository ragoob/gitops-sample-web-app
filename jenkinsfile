pipeline{
  agent any
   tools {
        go 'go1.20'
    }
  environment {
    WORKSPACE= pwd()
  }

  stages {
      stage("unit-test") {
            agent { docker { image 'golang:alpine' } }
            steps {
                echo 'Unit test excuting'
                sh 'make unit-tests'
            }
        }
  }
}